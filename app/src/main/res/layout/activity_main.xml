<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bak"

    >


    <TextView
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/main"
        android:gravity="center"
    android:textSize="10pt"
    android:textStyle="bold"
    />
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <TextView
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/main_1"
           android:textStyle="bold"
           />
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_2"
            android:textStyle="bold"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_3"
            android:textStyle="bold"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_4"
            android:textStyle="bold"
            />

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_5"
            android:textStyle="bold"
            android:textColor="#111111"
            >

        </TextView>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:textStyle="bold"
            android:textColor="#111111"
            />

            />
        </LinearLayout>
        <ImageButton
            android:id="@+id/dilogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/gob"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월: "
        android:textSize="10pt"
        android:textColor="#111111"
        />
<EditText
    android:inputType="number"
    android:id="@+id/myMoth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="          예: 1"
android:background="@drawable/textbox"
    />
        <TextView
            android:layout_marginLeft="25pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일: "
            android:textSize="10pt"
            android:textColor="#111111"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/myDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="         예: 21"
            android:background="@drawable/textbox"
            />
    </LinearLayout>
<RadioGroup
    android:layout_weight="0.2"
    android:id="@+id/radioGourp1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    >
    <RadioButton
        android:id="@+id/genderMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남"
        android:textColor="#0827ea"
        android:textSize="15pt"
        />
    <RadioButton
        android:id="@+id/genderWomun"
        android:layout_marginLeft="15pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여"
        android:textColor="#ea1708"
        android:textSize="15pt"
        />
</RadioGroup>
    <RadioGroup
        android:layout_weight="0.2"
        android:id="@+id/radioGourp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >
        <RadioButton
            android:id="@+id/Abutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A형"
            android:padding="10dp"
            android:textColor="#111111"
            android:textSize="10pt"
            />
        <RadioButton
            android:id="@+id/Bbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B형"
            android:padding="10dp"
            android:textColor="#111111"
            android:textSize="10pt"
            />
        <RadioButton
            android:id="@+id/Obutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O형"
            android:padding="10dp"
            android:textColor="#111111"
            android:textSize="10pt"
            />
        <RadioButton
            android:id="@+id/ABbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB형"
            android:padding="10dp"
            android:textColor="#111111"
            android:textSize="10pt"
            />
    </RadioGroup>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/matchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="검색 하기"
        android:background="@drawable/button"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="광고 배너"
        />
</LinearLayout>
